# Contributor:
# Maintainer:
pkgname=netatalk
pkgver=3.1.8
pkgrel=0
pkgdesc="Open Source AFP server"
url="http://netatalk.sourceforge.net/"
arch="all"
license="GPL2"
depends=""
depends_dev="acl-dev attr-dev avahi-dev cracklib-dev db-dev libevent-dev libgcrypt-dev openssl-dev tdb-dev"
makedepends="$depends_dev"
install=""
options="suid"
subpackages="$pkgname-doc $pkgname-dev"
source="http://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgver/$pkgname-$pkgver.tar.bz2"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--without-libevent \
		--with-cracklib \
		--without-tdb \
		--with-acls \
		--without-pam \
		--without-kerberos \
		--with-init-style=gentoo
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="9cab934ca32b8979f389da52d44c69c2  netatalk-3.1.8.tar.bz2"
sha256sums="34668d5f53b780e9f143c2d7ee06ebc1c2bd7758c60ca483c8b08da27dcc4d4c  netatalk-3.1.8.tar.bz2"
sha512sums="734745743b2d5fe39f3d6716f377e6255d6a061e3c615a4fe30db388ec6d848f6db063d733dfa24ccf967f1e9042841bce4824f4bed391952c4304ee11e11b0d  netatalk-3.1.8.tar.bz2"
